pipeline {
    agent any

    tools {
        jdk 'java25'
    }

    stages {
        stage('Info') {
            steps {
                githubNotify(context: 'Build Info', description: 'Running', status: 'PENDING')
                // publishChecks(name: 'Build Info', status: 'IN_PROGRESS', summary: 'running')
                echo "Build tag: ${env.BUILD_TAG}"
                echo "Branch: ${GIT_BRANCH}"
                echo "Commit: ${GIT_COMMIT}"

                // for debugging. remove this later
                sh 'printenv | sort'
            }
            post {
                success {
                    githubNotify(context: 'Build Info', description: 'Success', status: 'SUCCESS')
                    // publishChecks(name: 'Build Info', status: 'COMPLETED', summary: 'Success', conclusion: 'SUCCESS')
                }
                failure {
                    githubNotify(context: 'Build Info', description: 'Failed', status: 'FAILURE')
                    // publishChecks(name: 'Build Info', status: 'COMPLETED', summary: 'Failed', conclusion: 'FAILURE')
                }
            }
        }
    }
}
